<% include ../partials/head.ejs%>
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <h2>Edit System Administrator Account</h2>
            <div id="require_admin_edit">
                <h3>The Administrator account must be updated. </h3>
                <p>Please update your password using a different one than the default. Additionally, set a security question and answer.</p>
                <% if (loginMessage) { %>
                <%=loginMessage%><br />
                <% } %>
            </div>

            <div id="edit_admin_information">
                <form action="<%=sitePrefix%>/admin_start" method="post" class="login">
                    <div class="form-group">
                        <div class="form-group">
                            <label> Email Address </label>
                            <input type="email" class="form-control" name="email_address" required /><br />
                        </div>
                        <!--<div class="form-group">-->
                            <!--<label> Re-enter Email Address </label>-->
                            <!--<input type="text" class="form-control"/><br />-->
                        <!--</div>-->
                        <div class="form-group">
                            <label>Enter New Password:</label>
                            <input type="password" class="form-control" id="new_password" name="passwordNew" required="required" /><br />
                        </div>
                        <div class="form-group">
                            <label> Set a Security Question </label>
                            <input type="text" class="form-control" name="security_question" required /><br />
                        </div>
                        <div class="form-group">
                            <label> Set the Security Answer </label>
                            <input type="text" class="form-control" name="security_answer" required /><br />
                        </div>
                        <!--<div class="form-group">-->
                            <!--<label>Re-enter New Password:</label>-->
                            <!--<input type="password" class="form-control" id="new_password_repeat" name="passwordNew2" required="required" /><br />-->
                        <!--</div>-->

                        <button type="submit" class="btn btn-default">Submit Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer.ejs%>


