<% include ../partials/head.ejs%>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <h2>Edit System Administrator Account</h2>
            <div id="require_admin_edit">
                <h3>The Administrator account must be updated. </h3>
                <p>Please update your password using a different one than the default. Additionally, set a security question and answer.</p>
                <% if (loginMessage) { %>
                <%=loginMessage%><br />
                <% } %>
            </div>

            <div id="edit_admin_information">
                <form action="<%=sitePrefix%>/admin_start" method="post" class="login" >
                    <div class="form-group">
                        <div class="form-group">
                            <label> First Name </label>
                            <input type="text" class="form-control" name="first_name" id="first_name" pattern="[A-Za-z]{1,}" required /><br />
                        </div>

                        <div class="form-group">
                            <label> Last Name </label>
                            <input type="text" class="form-control" name="last_name" pattern="[A-Za-z]{1,}" id="last_name" required /><br />
                        </div>
                        <div class="form-group">
                            <label> Email Address </label>
                            <input type="email" class="form-control" name="email_address" id="email_address" required /><br />
                        </div>

                        <div class="form-group">
                            <label> Confirm Email Address </label>
                            <input type="email" class="form-control" name="email_address_confirm" id="email_address_confirm" required /><br />
                            <p id="email_checking">Email Address does not match</p>

                        </div>
                        <!--<div class="form-group">-->
                            <!--<label> Re-enter Email Address </label>-->
                            <!--<input type="text" class="form-control"/><br />-->
                        <!--</div>-->
                        <div class="form-group">
                            <label>Enter New Password:</label>
                            <input type="password" class="form-control" id="passwordNew" name="passwordNew" required="required" />
                        </div>
                        <div id="password_message" class="password_requirements">
                            <h3>Password Requirements</h3>
                            <p id="letter" class="invalid valid">A <b>lowercase</b> letter</p>
                            <p id="capital" class="invalid valid">A <b>capital (uppercase)</b> letter</p>
                            <p id="number" class="invalid valid">A <b>number</b></p>
                            <p id="symbol" class="invalid valid">A <b>symbol</b></p>
                            <p id="length" class="invalid valid">Minimum <b>8 characters</b></p>

                        </div>
                        <div class="form-group">
                            <label>Re-Enter Password:</label>
                            <input type="password" class="form-control" id="passwordNew_confirm" name="passwordNew_confirm" required="required" /><br />
                            <p id="password_checking">Password does not match</p>
                        </div>
                        <div class="form-group">
                            <label> Set a Security Question </label>
                            <input type="text" class="form-control" name="security_question" id="security_question" required /><br />
                        </div>
                        <div class="form-group">
                            <label> Set the Security Answer </label>
                            <input type="text" class="form-control" name="security_answer" required id="security_answer"/><br />
                        </div>

                        <button type="submit" class="btn btn-default" id="submitter">Submit Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs%>


