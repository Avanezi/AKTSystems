                        <% for (var a = 0; a < surveyQuestions.sections[4].questions[0].radio_options.length; a++) { %>
                            <div class="answer">
                                <input type="radio" name="q5a" id="'q5a_' + '<%= a+1%>'" value="<%= a+1%>" required="required" />
                                <label for="<%= a+1 %>"><%=surveyQuestions.sections[4].questions[0].radio_options[a]%></label>
                            </div>
                        <% } %>
                    <% } %>
                </fieldset>
<br>
                <fieldset>
