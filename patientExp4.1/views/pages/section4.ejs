<% include ../partials/head.ejs %>
<body>
<% include ../partials/navigation.ejs%>
<div class="container-fluid">
    <div class="row content">
        <div class="col-xs-12 col-sm-9">

            <h1>Section <%= surveyQuestions.sections[4].section_id%>:  <%= surveyQuestions.sections[4].section_name%></h1>
            <p><%=surveyQuestions.sections[4].extra_note%></p>
            <h2 class="question"><%=surveyQuestions.sections[4].questions[0].main_question%></h2>

            <form action="<%=sitePrefix%>/survey_run/<%=surveyRunId%>/section4"
                  method="post" enctype="application/x-www-form-urlencoded">
                <fieldset>
                    <h3 class="subquestion"><%=surveyQuestions.sections[4].questions[0].sub_questions[0]%></h3>
