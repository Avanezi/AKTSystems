<% include ../../partials/head.ejs%>
<div class="container-fluid">
    <div class="row content">
        <div class="col-xs-12 col-sm-9">
<h2>Login to your account</h2>

    <% if (loginMessage) { %>
        <%=loginMessage%><br />
    <% } %>
        <form class="login" action="<%=sitePrefix%>/auth/login" method="post">
            <div class="form-group">
                <label> Email address:</label>
                <input class="form-control" id="email_address" name="email_address"  required="required" /><br />
            </div>
            <div class="form-group">
                <label>Password:</label>
                <input type="password" class="form-control" id="password" name="password" required="required" /><br />
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    <p>
        Don't have an account? Then <a href="/team3/auth/register">register</a> for one.
    </p>

    </div>
</div>
</div>

