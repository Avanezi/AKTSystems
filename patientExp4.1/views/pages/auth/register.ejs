<% include ../../partials/admin_head%>
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-9">
            <h2>Create an account</h2>

            <% if (loginMessage) { %>
            <%=loginMessage%><br />
            <% } %>
            <form class="login" action="<%=sitePrefix%>/auth/register" method="post">
                <div class="form-group">
                    <div class="form-group">
                        <label>First Name:</label>
                        <input type="text" class="form-control" id="firstName" name="firstname" required="required" /><br />
                    </div>
                    <div class="form-group">
                        <label>Last Name:</label>
                        <input type="text" class="form-control" id="lastName" name="lastname" required="required" /><br />
                    </div>
                    <label> Email address:</label>
                    <input type="email" class="form-control" id="email_address" name="email_address"  required="required" /><br />
                </div>
                <div class="form-group">
                    <label>Password:</label>
                    <input type="password" class="form-control" id="password" name="password" required="required" /><br />
                </div>
                <div class="form-group">
                    <label>Re-type Password:</label>
                    <input type="password" class="form-control" id="retype_password" name="retype_password" required="required" /><br />
                </div>
                <div class="form-group">
                    <label>Security Question:</label>
                    <input type="text" class="form-control" id="security_question" name="security_question" required="required" /><br />
                </div>
                <div class="form-group">
                    <label>Security Answer:</label>
                    <input type="text" class="form-control" id="security_answer" name="security_answer" required="required" /><br />
                </div>
                <div class="form-group">
                    <label>Re-type Security Answer:</label>
                    <input type="text" class="form-control" id="retype_answer" name="retype_answer" required="required" /><br />
                </div>

                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
</div>
<% include ../../partials/footer %>